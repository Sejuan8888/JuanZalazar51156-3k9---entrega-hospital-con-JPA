<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="hospital-persistence-unit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.example.entidades.Cita</class>
        <class>org.example.entidades.Departamento</class>
        <class>org.example.entidades.HistoriaClinica</class>
        <class>org.example.entidades.Hospital</class>
        <class>org.example.entidades.Medico</class>
        <class>org.example.entidades.Paciente</class>
        <class>org.example.entidades.Sala</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:~/hospital_db"/> <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <property name="hibernate.hbm2ddl.auto" value="update"/> <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>